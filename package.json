{
  "name": "@simpoobusiness/sdk",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.7",
  "types": "dist/index.d.ts",
  "unpkg": "dist/simpoo-sdk.js",
  "jsdelivr": "dist/simpoo-sdk.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "sdk",
    "react",
    "inventory",
    "simpooBusiness"
  ],
  "author": "",
  "license": "MIT",
  "description": "Simpoo SDK for embedding simpooBusiness inventory widgets into any web app",
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "build": "npm run clean && npm run build:types &&  npm run build:bundle",
    "build:bundle": "cross-env NODE_ENV=production rollup -c --bundleConfigAsCjs",
    "docs": "typedoc --out docs src/embed.tsx",
    "build:watch": "cross-env NODE_ENV=production rollup -c --bundleConfigAsCjs -w ",
    "dev": "npm run build:watch",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist --project tsconfig.build.json",
    "publish:npm": "npm publish --access public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/plugin-url": "^8.0.2",
    "@types/axios": "^0.9.36",
    "@types/react": "^19.1.9",
    "@types/react-collapse": "^5.0.4",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^5.0.10",
    "rollup": "^4.45.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^4.1.11",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.2.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.525.0",
    "react-collapse": "^5.1.1",
    "react-loader-spinner": "^6.1.6",
    "react-redux": "^9.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tslib": "^2.8.1",
    "tw-animate-css": "^1.3.6",
    "use-debounce": "^10.0.5"
  }
}
