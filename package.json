{
  "name": "@simpoobusiness/sdk",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.2",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "docs": "typedoc --out docs src",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:css && npm run build:types && rollup -c --bundleConfigAsCjs",
    "build:types": "tsc -p tsconfig.build.json",
    "build:css": "postcss src/styles/tailwind.css -o dist/styles.css",
    "dev": "npm run build:watch & npm run yalc:watch",
    "build:watch": "rollup -c --watch --bundleConfigAsCjs",
    "yalc:publish": "yalc publish",
    "yalc:watch": "yalc push --watch",
    "postbuild": "yalc push",
    "prepare": "npm run build",
    "publish:npm": "npm run build && npm publish --access public"
  },
  "keywords": [
    "sdk",
    "react",
    "inventory",
    "simpooBusiness"
  ],
  "author": "",
  "license": "ISC",
  "description": "",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/plugin-url": "^8.0.2",
    "@types/axios": "^0.9.36",
    "@types/react": "^19.1.8",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^5.0.10",
    "rollup": "^4.45.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.11",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react-redux": "^9.2.0",
    "tailwind-merge": "^3.3.1",
    "tslib": "^2.8.1",
    "tw-animate-css": "^1.3.6"
  }
}
